{
  "compilerOptions": {

    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
        "@modules/*":[
            "src/modules/*"
        ],
        "@repositories/*":[
            "src/app/repositories/*"
        ],"@entities/*":[
            "src/app/entities/*"
        ],
        "@shared/*":[
            "src/shared/*"
        ],
        "@helpers/*":[
            "src/shared/helpers/*"
        ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
